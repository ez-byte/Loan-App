<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".walletActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutWallet1"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:id="@+id/layoutWallet2"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangular"
        app:layout_constraintTop_toBottomOf="@+id/layoutWallet1"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageHistory"
            android:src="@drawable/baseline_account_balance_wallet_24"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:contentDescription="My Loans"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textWallet1"
            android:text="View History"
            android:background="@drawable/square"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:id="@+id/layoutWallet3"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangular"
        app:layout_constraintTop_toBottomOf="@+id/layoutWallet2"
        app:layout_constraintStart_toStartOf="@id/layoutWallet2">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageFunds1"
            android:src="@drawable/baseline_add_funds"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:contentDescription="My Loans"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textWallet2"
            android:text="Add Funds"
            android:background="@drawable/square"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:id="@+id/layoutWallet4"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangular"
        app:layout_constraintTop_toBottomOf="@+id/layoutWallet2"
        app:layout_constraintStart_toEndOf="@id/layoutWallet3"
        app:layout_constraintEnd_toEndOf="@id/layoutWallet2">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageFunds2"
            android:src="@drawable/baseline_transfer"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:contentDescription="My Loans"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textWallet3"
            android:text="Fund Transfer"
            android:background="@drawable/square"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:id="@+id/layoutWallet5"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangular"
        app:layout_constraintTop_toBottomOf="@+id/layoutWallet3"
        app:layout_constraintStart_toStartOf="@id/layoutWallet3"
        app:layout_constraintEnd_toEndOf="@id/layoutWallet3">

        <ImageView
            android:id="@+id/imageBills1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:contentDescription="My Loans"
            android:src="@drawable/baseline_bills" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textWallet4"
            android:text="Pay Bills"
            android:background="@drawable/square"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="@color/black"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:id="@+id/layoutWallet6"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangular"
        app:layout_constraintTop_toBottomOf="@+id/layoutWallet4"
        app:layout_constraintStart_toEndOf="@id/layoutWallet3"
        app:layout_constraintEnd_toEndOf="@id/layoutWallet2">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageAirtime1"
            android:src="@drawable/baseline_airtime"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:contentDescription="My Loans"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textWallet5"
            android:text="Airtime Top-Up"
            android:background="@drawable/square"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="@color/black"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_menu"
        android:background="@color/white"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nav_fragment"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_navigation"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_nav_menu"
            app:labelVisibilityMode="labeled"/>

    </LinearLayout>

